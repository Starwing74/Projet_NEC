{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}

    <style>
        .page-section {
            padding: 110px 0;
            padding-right: 0px;
            padding-left: 0px;
        }
        .page-section {
            padding: 60px 0;
        }
        .px-0 {
            padding-right: 0 !important;
            padding-left: 0 !important;
        }
        #contact-background {
            height: 620px;
            background: url('{{ asset('media/Image/bands/contact.png?v=2021-12-13-10-50-22') }}') no-repeat center center;
            position: absolute;
            top: 0;
            left: 0;
            bottom: auto;
            right: 0;
        }
    </style>

<div class="container">
    <main>
        <center>
        <section class="page-section" style="margin-top: 150px">
            <div id="contact-title" class="page-container page-section-block text-center">
                <h1 class="ttitle th1">Contactez-nous</h1>
                <div id="contact-background"></div>
            </div>
            <div id="contact-content" class="position-relative">
                <div class="page-form-card card bg-warning text-white">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <br>
                        <div class="w-100">
                            <div class="row gx-3 gy-4 mb-60">
                                <div class="col-12" style="margin-top: 10px; margin-bottom: 10px">
                                    {{ form_label(form.Agence) }}
                                    <br>
                                    {{ form_widget(form.Agence) }}
                                </div>
                                <div class="col-12 col-lg-6 align-self-end" style="margin-top: 10px; margin-bottom: 10px">
                                    {{ form_widget(form.Nom) }}
                                </div>
                                <div class="col-12 col-lg-6" style="margin-top: 10px; margin-bottom: 10px">
                                    {{ form_widget(form.Email) }}
                                </div>
                                <div class="col-12 col-lg-6 align-self-end" style="margin-top: 10px; margin-bottom: 10px">
                                    {{ form_widget(form.Societe) }}
                                </div>
                                <div class="col-12 col-lg-6" style="margin-top: 10px; margin-bottom: 10px">
                                    {{ form_widget(form.Telephone) }}
                                </div>
                                <div class="col-12" style="margin-top: 10px; margin-bottom: 10px">
                                    {{ form_widget(form.VotreMessage) }}
                                </div>
                                <div class="col-12" style="margin-top: 10px; margin-bottom: 10px">
                                    {{ form_widget(form.Captcha) }}
                                    {% if form_errors(form.Captcha) %}
                                        <script>
                                            alert("Vous n'avez pas cliquer sur 'je ne suis pas un robot'");
                                        </script>
                                    {% endif %}
                                </div>
                                <div class="col-12">
                                    *Champs obligatoires
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <input type="submit" value="ENVOYER" />
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
        </center>
    </main>
</div>
{% endblock %}
